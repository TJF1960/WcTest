<editors>
    <!-- Custom Status (CST) Editor -->
    <editor id="cst">
        <range uom="25" subset="0,1,2" nls="CST"/> <!-- Handles the status of the node server -->
    </editor>

    <!-- Temperature Status Editor (CST1) -->
    <editor id="cst1">
        <range uom="25" subset="0,1" nls="CST1"/> <!-- Status: OK (1) / Not OK (0) -->
    </editor>

    <!-- Future Status Editor (CST2) -->
    <editor id="cst2">
        <range uom="25" subset="0" nls="CST2"/> <!-- Future, for future usage -->
    </editor>

    <!-- Heartbeat Editor -->
    <editor id="hb">
        <range uom="56" min="-1" max="2" prec="0"/> <!-- Heartbeat (-1, 0, 1) -->
    </editor>

    <!-- Updated Temperature Editor to handle both Fahrenheit and Celsius -->
    <editor id="tempf">
        <range uom="17" min="-100" max="200" prec="1"/> <!-- Temperature (Fahrenheit) -->
        <range uom="4" min="-100" max="200" prec="1"/>  <!-- Temperature (Celsius) -->
    </editor>

    <!-- Generic Text Editor (For IPs, Variable Text, etc.) -->
    <editor id="text">
        <range uom="56" min="0" max="100000" prec="2"/> <!-- Generic text fields, like names or numbers -->
    </editor>

    <!-- New Editor for On/Off Commands -->
    <editor id="onoff">
        <range uom="56" subset="0,1" nls="CMD_ONOFF"/> <!-- On/Off for output control (1 = ON, 0 = OFF) -->
    </editor>
</editors>

